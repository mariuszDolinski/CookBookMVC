@model CookBook.Application.IngridientUtils.IngridientDto

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createIngridientModal">
Dodaj nowy składnik
</button>

<div class="modal fade" id="createIngridientModal" tabindex="-1" aria-labelledby="createIngridientModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="modal-title fs-5" id="createIngridientModalLabel">Dodaj nowy składnik</h3>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
            <form asp-action="Create">
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label class="control-label" for="Name">Nazwa (wymagane)</label>
                        <input class="form-control" asp-for="Name" type="text" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" value="Dodaj składnik" class="btn btn-primary" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                </div>
            </form>
        </div>
    </div>
</div>
