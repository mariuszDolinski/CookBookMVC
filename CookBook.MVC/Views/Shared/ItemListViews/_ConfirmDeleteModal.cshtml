@{
    string description = "";
    var code = ViewBag.Code;
    switch (code)
    {
        case ItemCodes.UNIT:
            description = "Potwierdzenie usunięcia jednostki"; break;
        case ItemCodes.INGR:
            description = "Potwierdzenie usunięcia składnika"; break;
        case ItemCodes.CATG:
            description = "Potwierdzenie usunięcia kategorii"; break;
    }
}

<div class="modal fade" id="deleteItemModal" tabindex="-1" aria-labelledby="deleteItemModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="deleteItemModalLabel">@description</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                    <div id="confMessage"></div>
              </div>
              <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                    <button type="button" class="btn btn-danger" onclick="DeleteItem('@code')">Usuń</button>
              </div>
        </div>
    </div>
</div>
