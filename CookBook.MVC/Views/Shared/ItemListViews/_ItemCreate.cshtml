@model CookBook.Application.CommonDtos.ItemListDto
@{
    string description = "";
    string actionName = "";
    var code = ViewBag.Code;
    switch (code)
    {
        case ItemCodes.UNIT:
            description = "Dodaj nową jednostkę"; 
            actionName = "Create";
            break;
        case ItemCodes.INGR:
            description = "Dodaj nowy składnik";
            actionName = "Create";
            break;
        case ItemCodes.CATG:
            description = "Dodaj nową kategorie";
            actionName = "CreateRecipeCategory";
            break;
    }
}

<form asp-action="@actionName">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <label class="control-label" for="Name">@description</label>
    <div class="input-group">
        <input class="form-control" asp-for="Name" type="text" placeholder="Podaj nazwę"/>
        <div class="input-group-append"><input type="submit" value="Dodaj" class="btn btn-primary" /></div>
    </div>
    <span asp-validation-for="Name" class="text-danger"></span>
</form>
