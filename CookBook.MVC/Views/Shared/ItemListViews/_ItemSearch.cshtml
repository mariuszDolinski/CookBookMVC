@model Pagination
@{
    string description = "";
    string actionName = "";
    var code = ViewBag.Code;
    switch (code)
    {
        case ItemCodes.UNIT:
            description = "Znajdź jednstkę";
            actionName = "Index";
            break;
        case ItemCodes.INGR:
            description = "Znajdź składnik";
            actionName = "Index";
            break;
        case ItemCodes.CATG:
            description = "Znajdź kategorię";
            actionName = "GetAllCategories";
            break;
    }
}

<form asp-action="@actionName" method="get">
    <label class="control-label">@description</label>
    <div class="input-group">
        <input type="text" name="search" value="@Model.SearchPhrase" class="form-control" placeholder="Wpisz szukaną frazę" id="search">
        <div class="input-group-append"><input type="submit" value="Szukaj" class="btn btn-primary" /></div>
    </div>
    <input value="@Model.PageSize" name="pageSize" type="hidden"/>
    <input value="@Model.SortOrder" name="sortOrder" type="hidden"/>
</form>

