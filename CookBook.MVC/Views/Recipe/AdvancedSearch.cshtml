@model string[];
@{
    ViewData["Title"] = "Wyszukiwanie zaawansowane";
    string ings = "";
    if (Model != null)
    {
        for(int i = 0; i<Model.Length; i++)
        {
            ings += Model[i];
            if(i < Model.Length - 1)
            {
                ings += ";";
            }
        }
    }
}

@*hidden input to store currentSearch*@
<input type="hidden" id="ingridientList" value="@ings"/>

<h5>Wyszukiwanie zaawansowane</h5>
<hr />

<form asp-action="AdvancedSearch">
    <!--<div class="form-group form-check mb-3">
        <input class="form-check-input" type="checkbox" id="saveSearch"/>
        <label class="form-check-label" for="saveSearch">
            Zapisz wyszukiwanie
        </label>
    </div>
    <div class="form-group mb-3 col-12 col-md-4">
         <label class="control-label" for="searchName">Nazwa wyszukiwania</label>
         <input class="form-control" type="text" id="searchName" />   
    </div>-->
    <div class="row">
        <div class="col-md-5 col-lg-5">
            <div class="border p-2 mb-2" id="advancedMode">
                <label for="advancedMode" class="form-label">Dodatkowe filtry</label>
                <div class="form-group form-check mb-1">
                    <input class="form-check-input" type="radio" value="0" name="searchType" id="allRecipeRadio" checked>
                    <label class="form-check-label" for="allRadio">
                        wszystkie przepisy
                    </label>
                </div>
                <div class="form-group form-check mb-1">
                    <input class="form-check-input" type="radio" value="1" name="searchType" id="allRadio" checked>
                    <label class="form-check-label" for="allRadio">
                        przepisy zawierające wszystkie składniki z listy
                    </label>
                </div>
                <div class="form-group form-check mb-1">
                    <input class="form-check-input" type="radio" value="2" name="searchType" id="onlyRadio">
                    <label class="form-check-label" for="onlyRadio">
                        przepisy zawierające tylko składniki z listy
                    </label>
                </div>
            </div>
        </div>
        <div class="col-md-1 col-lg-1"></div>
        <div class="col-md-5 col-lg-5">
            <div class="form-group mb-3">
                <label  class="control-label" for="searchIng">Wybierz składniki do wyszukania</label>
                <div class="input-group">
                    <select id="searchlistIngridients" class="form-control">
                    </select>
                    <div class="mt-1 float-end">
                        <a class="btn btn-primary" onclick="addToSearchList()">
                            Dodaj    
                        </a>
                    </div>
                </div>
            </div>

            <h6>Lista składników do wyszukania:</h6>
            <table class="mb-3">
                <tbody id="searchListTable" name="advancedSearch">
                </tbody>
            </table>   

            <a class="btn btn-primary" onclick="searchRecipes()">
                Wyszukaj
            </a>
            <a class="btn btn-outline-danger" id="clearList" onclick="clearIngList()" hidden>
                Wyczyść listę
            </a>
        </div>
     </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/AdvancedSearch.js"></script>
}

