@model CookBook.Application.RecipeUtils.Commands.EditRecipeIngridient.EditRecipeIngridientCommand
<div class="modal fade" id="editRecipeIngridientModal" tabindex="-1" aria-labelledby="editRecipeIngridientModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="editRecipeIngridientModalLabel">Edycja składnika przepisu</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <form asp-action="EditRecipeIngridient">
                   <div class="modal-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input asp-for="Id" class="form-control" type="hidden"/>
                        <input asp-for="RecipeId" class="form-control" type="hidden"/>

                        <div class="form-group mb-2">
                            <label asp-for="Amount" class="control-label">Ilość</label>
                            <input asp-for="Amount" id="amountEdit" class="form-control" placeholder="Wpisz liczbę lub ułamek..." />
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Ingridient" class="control-label">Nazwa składnika</label>
                            <select asp-for="Ingridient" id="editlistIngridients" class="form-control">
                            </select>
                            @*<input asp-for="Ingridient" id="ingEdit" autocomplete="off" class="form-control" list="datalistIngridients" placeholder="Znajdź składnik...">
                            <datalist id="datalistIngridients"></datalist>*@
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Unit" class="control-label">Nazwa jednostki</label>
                            <select asp-for="Unit" id="editlistUnits" class="form-control">
                            </select>
                        </div>
                         <div class="form-group mb-2">
                            <label asp-for="Description" class="control-label">Opis</label>
                            <span><font size="2"><br />(Opis powinien odzwierciedlać podane dane. 
                                Jeśli np. wybrany składnik to mleko, jednostka to szklanka a ilość to 2, 
                                opis powinien brzmieć np. 2 szklanki mleka)</font></span>
                            <input asp-for="Description" id="descEdit" class="form-control" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                        <input type="submit" value="Aktualizuj" class="btn btn-primary"/>
                    </div>
                </form>
        </div>
    </div>
</div>