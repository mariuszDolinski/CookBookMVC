<div class="album py-2 bg-body-tertiary">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @foreach(var item in Model)
        {
            <div class="col">
                <div class="card shadow-sm m-3" style="width: auto">
                    @if(item.ImageName is null)
                    {
                        <img class="bd-placeholder-img card-img-top" src="~/images/placeholder.jpg" asp-append-version="true"/>
                    }
                    else
                    {
                        <img class="bd-placeholder-img card-img-top" src="@("~/images/"+item.ImageName)" asp-append-version="true"/>
                    }
                    <div class="card-body">
                        @if (item.OnlyForAdults)
                        {
                            <h6 class="card-subtitle mb-2">@item.Name  <span class="badge bg-warning">18+</span></h6>
                        }else
                        {
                            <h6 class="card-subtitle mb-2">@item.Name</h6>
                        }
                        <a class="btn btn-primary" asp-controller="Recipe" asp-action="Details" asp-route-recipeId="@item.Id.ToString()">Szczegóły</a>
                        <a class="btn btn-outline-secondary" asp-controller="Recipe" asp-action="Edit" asp-route-Id="@item.Id.ToString()">Edytuj</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
