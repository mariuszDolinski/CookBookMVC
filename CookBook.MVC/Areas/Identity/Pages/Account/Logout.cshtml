@page
@model LogoutModel
@{
    ViewData["Title"] = "Wylogowanie";
}

<header>
    <h3 class="mb-3">Czy na pewno chcesz się wylogować?</h3>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-outline-primary text-dark">Potwierdź wylogowanie</button>
            </form>
        }
        else
        {
            <p>Wylogowałeś aię z aplikacji.</p>
        }
    }
</header>
